<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/passwordText"
            android:layout_width="288dp"
            android:layout_height="156dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/refreshPasswordBtn"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:backgroundTint="@color/gray"
                android:text="Refresh"
                android:textColor="#C6C6C6"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/copyPasswordBtn"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:backgroundTint="@color/gray"
                android:text="Copy"
                android:textColor="#C6C6C6"
                android:textSize="12dp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Options"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:layout_marginTop="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Length"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/seekBarProgress"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="8"
            android:textSize="18dp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/lengthSeekBar"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:min="8"
            android:max="128"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/gray"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="A-Z"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/upperCaseSwitch"
            android:layout_width="100dp"
            android:layout_height="13dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="20dp"
            android:text="Uppercase (A to Z)"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/gray"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="0-9"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/numbersSwitch"
            android:layout_width="100dp"
            android:layout_height="13dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="20dp"
            android:text="Numbers (0 to 9)"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/gray"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="!@#$%"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/specialCharsSwitch"
            android:layout_width="100dp"
            android:layout_height="13dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="20dp"
            android:text="Special chars"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/gray"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

</LinearLayout>